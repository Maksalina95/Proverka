// –ò–º–ø–æ—Ä—Ç–∏—Ä—É–µ–º baseUrl –∏–∑ config.js
import { baseUrl } from './config.js';

document.addEventListener("DOMContentLoaded", () => {
  loadProducts(); // üåü –ó–∞–≥—Ä—É–∂–∞–µ–º –Ω–∞—á–∞–ª—å–Ω—ã–π —Å–ø–∏—Å–æ–∫ –ø—Ä–æ–¥—É–∫—Ç–æ–≤
  loadPage();     // üß≠ –ó–∞–≥—Ä—É–∂–∞–µ–º —Å—Ç—Ä–∞–Ω–∏—Ü—É –ø–æ —Ç–µ–∫—É—â–µ–º—É —Ö–µ—à—É

  // üé† –ê–≤—Ç–æ—Å–ª–∞–π–¥–µ—Ä –≤–Ω—É—Ç—Ä–∏ DOMContentLoaded
  const slides = document.querySelectorAll(".slide");
  let currentSlide = 0;

  if (slides.length > 0) {
    slides[currentSlide].classList.add("active");

    setInterval(() => {
      slides[currentSlide].classList.remove("active");
      currentSlide = (currentSlide + 1) % slides.length;
      slides[currentSlide].classList.add("active");
    }, 5000);
  }
});

window.addEventListener("hashchange", loadPage);

// üå∏ –ó–∞–≥—Ä—É–∑–∫–∞ —Å–ø–∏—Å–∫–∞ —Ç–æ–≤–∞—Ä–æ–≤ (–æ—Å–Ω–æ–≤–Ω–æ–π –∫–∞—Ç–∞–ª–æ–≥)
function loadProducts() {
  fetch(`${baseUrl}`)
    .then(res => res.json())
    .then(data => {
      const container = document.getElementById("productList");
      if (!container) return;

      container.innerHTML = ""; // –û—á–∏—â–∞–µ–º –ø–µ—Ä–µ–¥ –∑–∞–≥—Ä—É–∑–∫–æ–π
      const items = data.reverse();

      items.forEach(p => {
        const card = document.createElement("div");
        card.className = "product-card";

        const isFavorite = getFavorites().includes(p.id);

        card.innerHTML = `
          <img src="${p.—Ñ–æ—Ç–æ}" alt="${p.–Ω–∞–∑–≤–∞–Ω–∏–µ}">
          <h3>${p.–Ω–∞–∑–≤–∞–Ω–∏–µ}</h3>
          <p>${p.–æ–ø–∏—Å–∞–Ω–∏–µ || ""}</p>
          <p><strong>${p.—Ü–µ–Ω–∞} ‚ÇΩ</strong></p>
          <a href="https://wa.me/798376280080" target="_blank">WhatsApp</a>
        `;

        const favBtn = document.createElement("button");
        favBtn.className = "fav-btn";
        favBtn.innerHTML = isFavorite ? "‚ù§Ô∏è" : "ü§ç";
        favBtn.onclick = () => toggleFavorite(p.id, favBtn);

        card.appendChild(favBtn);
        container.appendChild(card);
      });
    });
}

// üìÑ SPA-—Ö–µ—à-–º–∞—Ä—à—Ä—É—Ç–∏–∑–∞—Ü–∏—è
function loadPage() {
  const page = location.hash.substring(1) || '–≥–ª–∞–≤–Ω–∞—è';
  const container = document.getElementById("app-content");

  if (page === "–≥–ª–∞–≤–Ω–∞—è") {
    container.innerHTML = '<div id="productList" class="product-list"></div>';
    loadProducts();
    return;
  }

  fetch(`${page}.html`)
    .then(res => res.ok ? res.text() : '<p>–°—Ç—Ä–∞–Ω–∏—Ü–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω–∞</p>')
    .then(html => {
      container.innerHTML = html;
      window.scrollTo(0, 0);
    })
    .catch(() => {
      container.innerHTML = "<p>–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã</p>";
    });
}

// üíñ –ò–∑–±—Ä–∞–Ω–Ω–æ–µ
function getFavorites() {
  return JSON.parse(localStorage.getItem("favorites") || "[]");
}

function toggleFavorite(id, button) {
  let favorites = getFavorites();

  if (favorites.includes(id)) {
    favorites = favorites.filter(favId => favId !== id);
    button.innerHTML = "ü§ç";
  } else {
    favorites.push(id);
    button.innerHTML = "‚ù§Ô∏è";
  }

  localStorage.setItem("favorites", JSON.stringify(favorites));
}
