// –ò–º–ø–æ—Ä—Ç–∏—Ä—É–µ–º baseUrl –∏–∑ config.js
import { baseUrl } from './config.js';

document.addEventListener("DOMContentLoaded", () => {
  loadProducts(); // üåü –ó–∞–≥—Ä—É–∂–∞–µ–º –Ω–∞—á–∞–ª—å–Ω—ã–π —Å–ø–∏—Å–æ–∫ –ø—Ä–æ–¥—É–∫—Ç–æ–≤
  initSlider();   // üé† –ó–∞–ø—É—Å–∫–∞–µ–º —Å–ª–∞–π–¥–µ—Ä
});

// üå∏ –ó–∞–≥—Ä—É–∑–∫–∞ –≤—Å–µ—Ö —Ç–æ–≤–∞—Ä–æ–≤ (–Ω–∞ –≥–ª–∞–≤–Ω–æ–π)
function loadProducts() {
  fetch(`${baseUrl}`)
    .then(res => res.json())
    .then(data => {
      const container = document.getElementById("productList");
      if (!container) return;

      container.innerHTML = "";
      const items = data.reverse();

      renderProductList(items, container);
    });
}

// üîÑ –†–µ–Ω–¥–µ—Ä —Ç–æ–≤–∞—Ä–æ–≤
function renderProductList(items, container) {
  container.innerHTML = "";

  items.forEach(p => {
    const card = document.createElement("div");
    card.className = "product-card";

    const isFavorite = getFavorites().includes(p.id);

    card.innerHTML = `
      <img src="${p.—Ñ–æ—Ç–æ}" alt="${p.–Ω–∞–∑–≤–∞–Ω–∏–µ}">
      <h3>${p.–Ω–∞–∑–≤–∞–Ω–∏–µ}</h3>
      <p>${p.–æ–ø–∏—Å–∞–Ω–∏–µ || ""}</p>
      <p><strong>${p.—Ü–µ–Ω–∞} ‚ÇΩ</strong></p>
      <a href="https://wa.me/798376280080" target="_blank">WhatsApp</a>
    `;

    const favBtn = document.createElement("button");
    favBtn.className = "fav-btn";
    favBtn.innerHTML = isFavorite ? "‚ù§Ô∏è" : "ü§ç";
    favBtn.onclick = () => toggleFavorite(p.id, favBtn);

    card.appendChild(favBtn);
    container.appendChild(card);
  });
}

// üíñ –ò–∑–±—Ä–∞–Ω–Ω–æ–µ
function getFavorites() {
  return JSON.parse(localStorage.getItem("favorites") || "[]");
}

function toggleFavorite(id, button) {
  let favorites = getFavorites();

  if (favorites.includes(id)) {
    favorites = favorites.filter(favId => favId !== id);
    button.innerHTML = "ü§ç";
  } else {
    favorites.push(id);
    button.innerHTML = "‚ù§Ô∏è";
  }

  localStorage.setItem("favorites", JSON.stringify(favorites));
}

// üé† –°–ª–∞–π–¥–µ—Ä
function initSlider() {
  const slides = document.querySelectorAll(".slide");
  let currentSlide = 0;

  if (slides.length > 0) {
    slides[currentSlide].classList.add("active");

    setInterval(() => {
      slides[currentSlide].classList.remove("active");
      currentSlide = (currentSlide + 1) % slides.length;
      slides[currentSlide].classList.add("active");
    }, 5000);
  }
}

// üì§ –≠–∫—Å–ø–æ—Ä—Ç–∏—Ä—É–µ–º –¥–ª—è catalog.js
export { renderProductList };
