const baseUrl = "https://opensheet.elk.sh/1uvZDDq7y3D73InwHYQ4vKqmhHXGtK9KjdRcVXzm5KAk";

document.addEventListener("DOMContentLoaded", () => {
  // üåü –ó–∞–≥—Ä—É–∂–∞–µ–º –Ω–∞—á–∞–ª—å–Ω—ã–π —Å–ø–∏—Å–æ–∫ –ø—Ä–æ–¥—É–∫—Ç–æ–≤
  loadProducts();

  // üß≠ –ù–∞–≤–∏–≥–∞—Ü–∏—è –ø–æ –∫–Ω–æ–ø–∫–∞–º (–≤–Ω–∏–∑—É —Å—Ç—Ä–∞–Ω–∏—Ü—ã)
  document.querySelectorAll(".bottom-icons button").forEach(button => {
    const title = button.getAttribute("aria-label");
    const page = button.getAttribute("onclick")?.match(/'([^']+\.html)'/)?.[1];

    if (page) {
      button.addEventListener("click", () => {
        loadPage(title, page);
      });
    }
  });
});

// üå∏ –ó–∞–≥—Ä—É–∑–∫–∞ —Å–ø–∏—Å–∫–∞ —Ç–æ–≤–∞—Ä–æ–≤ (–æ—Å–Ω–æ–≤–Ω–æ–π –∫–∞—Ç–∞–ª–æ–≥)
function loadProducts() {
  fetch(`${baseUrl}/–õ–∏—Å—Ç1`)
    .then(res => res.json())
    .then(data => {
      const container = document.getElementById("productList");
      if (!container) return;

      container.innerHTML = ""; // –û—á–∏—â–∞–µ–º –ø–µ—Ä–µ–¥ –∑–∞–≥—Ä—É–∑–∫–æ–π
      const items = data.reverse();

      items.forEach(p => {
        const card = document.createElement("div");
        card.className = "product-card";

        const isFavorite = getFavorites().includes(p.id);

        card.innerHTML = `
          <img src="${p.—Ñ–æ—Ç–æ}" alt="${p.–Ω–∞–∑–≤–∞–Ω–∏–µ}">
          <h3>${p.–Ω–∞–∑–≤–∞–Ω–∏–µ}</h3>
          <p>${p.–æ–ø–∏—Å–∞–Ω–∏–µ || ""}</p>
          <p><strong>${p.—Ü–µ–Ω–∞} ‚ÇΩ</strong></p>
          <a href="https://wa.me/798376280080" target="_blank">WhatsApp</a>
        `;

        const favBtn = document.createElement("button");
        favBtn.className = "fav-btn";
        favBtn.innerHTML = isFavorite ? "‚ù§Ô∏è" : "ü§ç";
        favBtn.onclick = () => toggleFavorite(p.id, favBtn);

        card.appendChild(favBtn);
        container.appendChild(card);
      });
    });
}

// üìÑ –ó–∞–≥—Ä—É–∑–∫–∞ HTML-—Å—Ç—Ä–∞–Ω–∏—Ü—ã –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä SPA
function loadPage(title, url) {
  const content = document.getElementById("spa-content");
  content.innerHTML = "<p>–ó–∞–≥—Ä—É–∑–∫–∞...</p>";

  fetch(url)
    .then(res => res.text())
    .then(html => {
      content.innerHTML = html;
      window.scrollTo(0, 0); // –ø—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –≤–≤–µ—Ä—Ö –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
    })
    .catch(() => {
      content.innerHTML = "<p>–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏.</p>";
    });
}

// üíñ –ò–∑–±—Ä–∞–Ω–Ω–æ–µ
function getFavorites() {
  return JSON.parse(localStorage.getItem("favorites") || "[]");
}

function toggleFavorite(id, button) {
  let favorites = getFavorites();

  if (favorites.includes(id)) {
    favorites = favorites.filter(favId => favId !== id);
    button.innerHTML = "ü§ç";
  } else {
    favorites.push(id);
    button.innerHTML = "‚ù§Ô∏è";
  }

  localStorage.setItem("favorites", JSON.stringify(favorites));
}

// üé† –ê–≤—Ç–æ—Å–ª–∞–π–¥–µ—Ä
const slides = document.querySelectorAll(".slide");
let currentSlide = 0;

if (slides.length > 0) {
  slides[currentSlide].classList.add("active");

  setInterval(() => {
    slides[currentSlide].classList.remove("active");
    currentSlide = (currentSlide + 1) % slides.length;
    slides[currentSlide].classList.add("active");
  }, 5000);
}
